# ansible/roles/k3s_install/templates/hello-world-deployment.yml.j2
apiVersion: apps/v1
kind: Deployment
metadata:
  name: {{ k3s_install_hello_world_deployment_name }}
  namespace: {{ k3s_install_hello_world_namespace }}
spec:
  replicas: 1
  selector:
    matchLabels:
      app: {{ k3s_install_hello_world_deployment_name }}
  template:
    metadata:
      labels:
        app: {{ k3s_install_hello_world_deployment_name }}
    spec:
      containers:
      - name: {{ k3s_install_hello_world_deployment_name }}
        image: {{ k3s_install_hello_world_image }}
        ports:
        - containerPort: 80
---
apiVersion: v1
kind: Service
metadata:
  name: {{ k3s_install_hello_world_service_name }}
  namespace: {{ k3s_install_hello_world_namespace }}
spec:
  selector:
    app: {{ k3s_install_hello_world_deployment_name }}
  ports:
  - protocol: TCP
    port: {{ k3s_install_hello_world_port }}
    targetPort: 80
  type: LoadBalancer
